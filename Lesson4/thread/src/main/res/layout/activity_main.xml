<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ThreadTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Среднее кол-во пар в день"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <Button
        android:id="@+id/ThreadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Рассчитать"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ThreadTextView"
        app:layout_constraintVertical_bias="0.655" />

    <EditText
        android:id="@+id/ThreadEditText1"
        android:layout_width="219dp"
        android:layout_height="105dp"
        android:ems="10"
        android:hint="Общее кол-во пар"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/ThreadEditText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.716" />

    <EditText
        android:id="@+id/ThreadEditText2"
        android:layout_width="223dp"
        android:layout_height="100dp"
        android:layout_marginBottom="44dp"
        android:ems="10"
        android:hint="Общее кол-во уч. дней"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/ThreadTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ThreadTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результат рассчета"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/ThreadButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ThreadTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>